<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:PopupSample"
             x:Class="PopupSample.MainPage">

   <StackLayout>
        <Button Text="Open Popup" Clicked="Button_Clicked">


        </Button>
        <Entry VerticalOptions="EndAndExpand" Text="Enter text" x:Name="entry" TextChanged="Entry_TextChanged"></Entry>
        <local:SfPopup x:Name="popup"></local:SfPopup>
    </StackLayout>

</ContentPage>

